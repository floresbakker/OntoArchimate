    sh:construct '''

prefix archimate: <https://data.rijksfinancien.nl/archimate/model/def/>
prefix archiSVG:  <https://data.rijksfinancien.nl/archisvg/model/def/>
prefix dct:       <http://purl.org/dc/terms/>
prefix foaf:      <http://xmlns.com/foaf/0.1/>
